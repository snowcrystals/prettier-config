{
	"name": "@snowcrystals/prettier-config",
	"version": "1.0.0",
	"description": "Prettier config compiled to cjs and mjs ⚙️",
	"author": "ijsKoud <github@ijskoud.dev>",
	"license": "MIT",
	"type": "module",
	"module": "./dist/prettier.js",
	"main": "./dist/prettier.cjs",
	"types": "./dist/prettier.d.ts",
	"files": [
		"dist/"
	],
	"homepage": "https://github.com/snowcrystals/prettier-config",
	"scripts": {
		"build": "tsup src",
		"build:watch": "tsc --watch",
		"postinstall": "is-ci || husky",
		"lint": "eslint src",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable",
		"bump": "cliff-jumper"
	},
	"resolutions": {
		"load-tsconfig": "^0.2.5"
	},
	"devDependencies": {
		"@favware/cliff-jumper": "^3.0.3",
		"@sapphire/ts-config": "^5.0.1",
		"@snowcrystals/eslint-config": "^1.0.2",
		"@types/node": "^20.17.9",
		"eslint": "^8.57.1",
		"husky": "^9.1.7",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.10",
		"pinst": "^3.0.0",
		"prettier": "^3.4.1",
		"tsup": "^8.3.5"
	},
	"engines": {
		"node": ">= v18.16.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@8.15.9"
}
